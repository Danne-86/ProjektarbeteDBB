<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title><%= title %></title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="/stylesheets/style.css" />
  </head>
  <body class="bg-gray-50 min-h-screen">
  
    <!-- Header -->

   <main class="mx-auto max-w-7xl p-6">
    <h1 class="text-2xl font-bold mb-2"><%= title %></h1>
    <p class="text-gray-700">Hello, <%= user.username %>! You have administrative privileges.</p>
  
    <form method="GET" action="/admin" class="mb-6">
      <input type="hidden" name="flagged" value="<%= showFlagged ? false : true %>">
      <button
        type="submit"
        class="px-4 py-2 border rounded bg-white hover:bg-gray-50"
      >
        <%= showFlagged ? 'Show all' : 'Show flagged' %>
      </button>
    </form>

    <%
    const filteredComments = showFlagged ? comments.filter(comment => comment.is_flagged) : comments;
    const filteredPosts = showFlagged ? posts.filter(post => post.is_flagged || filteredComments.some(comment => comment.post_id === post.id)) : posts;
    %>
    
    <% filteredPosts.forEach((post) => { %>
      <div class="bg-white p-6 rounded-lg shadow mb-6">
      <h2 class="text-xl font-bold mb-2"><%= post.title %></h3>
      <p>
        <%= post.content %>
              <p><small>Written by <%= post.username %></small></p>
        <div style="display: flex; flex-direction: row; gap: 10px; align-items: center;">
          <form action="/admin/posts/delete" method="POST" onsubmit="return confirm('Do you really want to delete <%= post.title %>?')"><input type="hidden" name="showFlagged" value="<%= showFlagged %>"><button class="px-4 py-2 border rounded bg-white hover:bg-gray-50" type="submit" name="id" value="<%= post.id %>">🗑️</button></form>
          <% if (post.is_flagged == true) { %>
          <span>🚩</span>
          <form action="/admin/posts/unflag" method="POST" onsubmit="return confirm('Do you really want to unflag <%= post.title %>?')"><input type="hidden" name="showFlagged" value="<%= showFlagged %>"><button class="px-4 py-2 border rounded bg-white hover:bg-gray-50" type="submit" name="id" value="<%= post.id %>">Unflag</button></form>
          <% } %>
        </div>
      </p>

      <h3 class="text-lg font-bold m-2">Comments</h3>

      <% filteredComments.forEach((comment) => { %>
      <% if (comment.post_id === post.id) { %>
      <div class="ml-4">
        <p>
          <div class="flex flex-row gap-2 items-center">
            <small><%= comment.username %></small>
            <p><%= comment.content %></p>
            
            <form action="/admin/comments/delete" method="POST" onsubmit="return confirm('Do you really want to delete comment?\n <%= comment.content %>')"><input type="hidden" name="showFlagged" value="<%= showFlagged %>"><button class="px-4 py-2 border rounded bg-white hover:bg-gray-50" type="submit" name="id" value="<%= comment.id %>">🗑️</button></form>
            <% if (comment.is_flagged == true) { %>
            <span>🚩</span>
            <form action="/admin/comments/unflag" method="POST" onsubmit="return confirm('Do you really want to unflag comment?\n <%= comment.content %>')"><input type="hidden" name="showFlagged" value="<%= showFlagged %>"><button class="px-4 py-2 border rounded bg-white hover:bg-gray-50" type="submit" name="id" value="<%= comment.id %>">Unflag</button></form>
            <% } %>

          </div>
        </p>

      </div>
      <%}}) %>
    </div>
  <% }) %>
  </main>
  </body>
</html>
